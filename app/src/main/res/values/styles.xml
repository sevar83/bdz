<resources>

    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.StationAutocompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:completionThreshold">1</item>
        <item name="android:digits">@string/allowed_station_chars</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Bdz.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.Dense" />

</resources>
